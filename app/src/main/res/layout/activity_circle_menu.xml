<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   tools:ignore="MissingConstraints"
                                                   android:layout_height="match_parent"
>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="@dimen/cardview_compat_inset_shadow"
            android:foregroundGravity="center"
            android:src="@drawable/icon_drama_download_ok"
            android:tint="#fff"
            app:elevation="@null"
            app:layout_constraintCircle="@+id/fab_menu"
            app:layout_constraintCircleAngle="0"
            app:layout_constraintCircleRadius="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="@dimen/cardview_compat_inset_shadow"
            android:src="@drawable/icon_drama_download_ok"
            android:tint="#fff"
            app:elevation="@null"
            app:layout_constraintCircle="@+id/fab_menu"
            app:layout_constraintCircleAngle="315"
            app:layout_constraintCircleRadius="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="@dimen/cardview_compat_inset_shadow"
            android:src="@drawable/icon_drama_download_ok"
            android:tint="#fff"
            app:elevation="@null"
            app:layout_constraintCircle="@+id/fab_menu"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="0dp"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_menu"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:src="@android:drawable/ic_dialog_email"
            android:tint="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <com.zhenquan.mycustomview.customview.CircleMenu android:layout_width="wrap_content"
                                                     android:id="@+id/circle_menu"
                                                     app:layout_constraintRight_toRightOf="parent"
                                                     app:layout_constraintBottom_toTopOf="@id/fab_menu"
                                                     android:layout_marginBottom="100dp"
                                                     android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
