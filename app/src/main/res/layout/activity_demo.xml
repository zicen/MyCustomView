<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent"
>

    <com.zhenquan.mycustomview.customview.maoer.LiveRankStatusView
            android:layout_width="wrap_content"
            android:id="@+id/live_rank_status"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="50dp"/>

    <com.zhenquan.mycustomview.customview.maoer.LiveGlobalNoticeView
            android:layout_width="wrap_content"
            android:id="@+id/live_global2"
            android:background="@mipmap/bg_live_gift_colorful_notice"
            app:layout_constraintTop_toBottomOf="@+id/live_rank_status"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_anim"
            android:layout_width="wrap_content"
            android:text="开始动画"
            app:layout_constraintTop_toBottomOf="@+id/live_global2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:text="设置状态"
            app:layout_constraintTop_toBottomOf="@+id/btn_start_anim"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>