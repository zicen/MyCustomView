<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent"
>

    <com.zhenquan.mycustomview.customview.LiveRankStatusView
            android:layout_width="wrap_content"
            android:id="@+id/live_rank_status"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="50dp"/>

    <com.zhenquan.mycustomview.customview.maoer.LiveGlobalNoticeView
            android:layout_width="wrap_content"
            android:id="@+id/live_global"
            app:layout_constraintTop_toBottomOf="@+id/live_rank_status"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_height="wrap_content"/>


    <com.zhenquan.mycustomview.customview.maoer.LiveGlobalNoticeView
            android:layout_width="wrap_content"
            android:id="@+id/live_global2"
            app:layout_constraintTop_toBottomOf="@+id/live_rank_status"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_anim"
            android:layout_width="wrap_content"
            android:text="开始动画"
            app:layout_constraintTop_toBottomOf="@+id/live_global2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_anim2"
            android:layout_width="wrap_content"
            android:text="开始动画2"
            app:layout_constraintTop_toBottomOf="@+id/btn_start_anim"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_start_anim2"
            android:layout_height="0dp" android:orientation="vertical">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>