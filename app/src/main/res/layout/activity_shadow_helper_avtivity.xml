<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ShadowHelperAvtivity">
    <Button android:layout_width="200dp" android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:text="原始没有阴影效果"
            android:id="@+id/btn0"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"
            android:textColor="#fff"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button android:layout_width="200dp" android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:text="ShadowHelper 设置阴影效果"
            android:id="@+id/btn1"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/btn0"
    />

    <Button android:layout_width="200dp" android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:text="ViewCompat setElevation 设置阴影效果"
            android:id="@+id/btn2"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/btn1"
    />
</androidx.constraintlayout.widget.ConstraintLayout>