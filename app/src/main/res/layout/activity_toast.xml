<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="点击弹 Toast"
            android:id="@+id/btn_toast"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="点击弹 Toast2"
            android:id="@+id/btn_toast2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_toast"
    />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="点击弹 ToastUtil 自定义背景"
            android:id="@+id/btn_toast_util_custom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_toast2"
    />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="点击弹 ToastUtil"
            android:id="@+id/btn_toast_util"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_toast_util_custom"
    />
</androidx.constraintlayout.widget.ConstraintLayout>