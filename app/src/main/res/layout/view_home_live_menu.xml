<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/container"
                                                   tools:ignore="MissingConstraints,ContentDescription">

    <!--开始直播-->
    <androidx.cardview.widget.CardView
            android:id="@+id/card_live_start"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            app:cardBackgroundColor="#e6635c"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            app:layout_constraintCircle="@id/card_status"
            app:layout_constraintCircleAngle="270"
    >

        <TextView
                android:id="@+id/txt_live_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="2"
                android:gravity="center"
                android:maxEms="2"
                android:text="开始直播"
                android:textColor="#ffffff"
                android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>
    <!--直播中心-->
    <androidx.cardview.widget.CardView
            android:id="@+id/card_live_center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            app:cardBackgroundColor="#e6635c"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintCircle="@+id/card_status"
            app:layout_constraintCircleAngle="0"
    >


        <TextView
                android:id="@+id/txt_live_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="2"
                android:gravity="center"
                android:maxEms="2"
                android:text="直播中心"
                android:textColor="#ffffff"
                android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>
    <!--菜单按钮-->
    <androidx.cardview.widget.CardView
            android:id="@+id/card_status"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_below="@+id/card_live_center"
            app:cardBackgroundColor="#e6635c"
            app:cardCornerRadius="19dp"
            app:cardElevation="5dp"
            android:layout_margin="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <ImageView
                android:id="@+id/img_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_vector_add_menu"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
