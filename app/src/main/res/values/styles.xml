<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="TextBorderView">
        <!-- 边框的颜色 -->
        <attr name="tbv_border_color" format="color"/>
        <!-- 选中状态时边框的颜色 -->
        <attr name="tbv_border_select_color" format="color"/>
        <!-- 设置背景颜色 -->
        <attr name="tbv_bg_color" format="color"/>
        <!-- 设置背景选中状态的颜色 -->
        <attr name="tbv_bg_select_color" format="color"/>
        <!-- 边框的宽度 -->
        <attr name="tbv_border_width" format="dimension"/>
        <!-- 设置圆角大小 -->
        <attr name="tbv_border_radius" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="ProgressRing">
        <!--进度起始色-->
        <attr name="pr_progress_start_color" format="color"/>
        <!--进度结束色-->
        <attr name="pr_progress_end_color" format="color"/>
        <!--背景起始色-->
        <attr name="pr_bg_start_color" format="color"/>
        <!--背景中间色-->
        <attr name="pr_bg_mid_color" format="color"/>
        <!--背景结束色-->
        <attr name="pr_bg_end_color" format="color"/>
        <!--进度值 介于0-100-->
        <attr name="pr_progress" format="integer"/>
        <!--进度宽度-->
        <attr name="pr_progress_width" format="dimension"/>
        <!--起始角度-->
        <attr name="pr_start_angle" format="integer"/>
        <!--扫过的角度-->
        <attr name="pr_sweep_angle" format="integer"/>
        <!--是否显示动画-->
        <attr name="pr_show_anim" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleDownloadProgressBar">
        <!--默认圆的颜色-->
        <attr name="cdpb_defaultColor" format="color"/>
        <!--进度条的颜色-->
        <attr name="cdpb_reachedColor" format="color"/>
        <!--默认圆的高度-->
        <attr name="cdpb_defaultHeight" format="dimension"/>
        <!--进度条的高度-->
        <attr name="cdpb_reachedHeight" format="dimension"/>
        <!--圆的半径-->
        <attr name="cdpb_radius" format="dimension"/>
    </declare-styleable>
</resources>
